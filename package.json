  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.16.0",
    "@typescript-eslint/parser": "^6.16.0",
    "eslint": "^8.56.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-top-level-await": "^1.4.1"
  },
  "dependencies": {
    "kaboom": "^3000.1.17",
    "kaboom-flex-ui": "^0.0.7"
  }
}
